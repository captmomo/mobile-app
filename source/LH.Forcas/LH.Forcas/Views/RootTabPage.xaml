<?xml version="1.0" encoding="utf-8" ?>
<bbar:BottomBarPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dashboard="clr-namespace:LH.Forcas.Views.Dashboard;assembly=LH.Forcas"
             xmlns:accounts="clr-namespace:LH.Forcas.Views.Accounts;assembly=LH.Forcas"
             xmlns:bbar="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             xmlns:budget="clr-namespace:LH.Forcas.Views.Budget;assembly=LH.Forcas"
             xmlns:ext="clr-namespace:LH.Forcas.Views.Reusable.MarkupExtensions;assembly=LH.Forcas"
             xmlns:views="clr-namespace:LH.Forcas.Views;assembly=LH.Forcas"
             xmlns:transactions="clr-namespace:LH.Forcas.Views.Transactions;assembly=LH.Forcas"
             x:Class="LH.Forcas.Views.RootTabPage" BarTheme="Light" BarBackgroundColor="Default">

  <dashboard:DashboardPage Title="{ ext:Translate Dashboard_Title }" Icon="chart.png" />
  <budget:BudgetPage Title="{ ext:Translate BudgetPage_Title }" Icon="budget.png" />
  <transactions:CashTransactionPage Title="{ ext:Translate CashTransactionPage_Title }" Icon="cash_euro.png" />
  <NavigationPage Title="{ ext:Translate AccountsListPage_Title }" Icon="account.png">
    <accounts:AccountsListPage BindingContext="{ Binding AccountsListPageViewModel }" />
  </NavigationPage>
  <views:MorePage Title="{ ext:Translate MorePage_Title }" Icon="more.png" />
</bbar:BottomBarPage>