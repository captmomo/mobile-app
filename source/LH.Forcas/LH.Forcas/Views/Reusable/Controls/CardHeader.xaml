<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LH.Forcas.Views.Reusable.Controls.CardHeader">
    <ContentView.Content>
        <StackLayout Spacing="0" Padding="0">
            <StackLayout>
                <StackLayout.Padding>
                    <OnPlatform x:TypeArguments="Thickness" Android="16,16,16,4" iOS="16,24,16,4" WinPhone="16,16,16,4"/>
                </StackLayout.Padding>
                
                <Label Style="{DynamicResource CardHeaderLabelTextStyle}" x:Name="HeaderLabel" />
            </StackLayout>
            <BoxView 
                HorizontalOptions="FillAndExpand" 
                BackgroundColor="{DynamicResource Divider}">
                <BoxView.HeightRequest>
                    <OnPlatform x:TypeArguments="x:Double" iOS=".5" Android="1" WinPhone="1"/>
                </BoxView.HeightRequest>
            </BoxView>
        </StackLayout>
    </ContentView.Content>
</ContentView>